#!/usr/bin/make -f
# -*- makefile -*-
# Sample debian/rules that uses debhelper.
# This file was originally written by Joey Hess and Craig Small.
# As a special exception, when this file is copied by dh-make into a
# dh-make output file, you may use that output file without restriction.
# This special exception was added by Craig Small in version 0.37 of dh-make.

# Uncomment this to turn on verbose mode.
#export DH_VERBOSE=1
#DPKG_EXPORT_BUILDFLAGS = 1
SUBSTVARS=-Vuserland:Depends="rpi$(RPI_MODEL)-userland (=$(VERSION))" -Vdist:Depends="rpi$(RPI_MODEL)-bootloader (=$(VERSION)), rpi$(RPI_MODEL)-userland (=$(VERSION)), linux-image-$(RELEASE) (=$(VERSION)), linux-libc-dev (>=$(VERSION))"
%:
	dh $@
override_dh_shlibdeps:
override_dh_gencontrol:
	$(eval RELEASE=$(shell cat "linux/include/config/kernel.release"))
	$(eval REVISION=$(shell cat linux/.version))
	$(eval VERSION=$(RELEASE)-$(REVISION))
	dh_gencontrol -- $(SUBSTVARS)

